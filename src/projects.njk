---
<header class="bg-blue-600 text-gray-50">
  <div class="max-w-screen-xl px-6 py-8 mx-auto md:text-center lg:py-12">
    <h1 class="text-4xl lg:text-5xl">{{ title }}</h1>
  </div>
</header>
<div class="grid max-w-screen-xl grid-flow-row gap-8 px-6 mx-auto mt-12 sm:grid-cols-2 lg:grid-cols-3">
    {% for project in projects %}
    <a class="transition duration-150 ease-in-out transform border-2 border-blue-600 rounded-lg hover:scale-105 focus:scale-105 hover:shadow-xl focus:shadow-xl" href="{{ project.url | url }}">
      <article class="h-full p-4">
        <h3 class="text-2xl">{{ project.data.title }}</h3>
        <time class="block mt-1 font-mono text-gray-600" datetime="{{ project.date | dateYear }}">{{ project.date | dateYear }}</time>
        <p class="mt-2 leading-normal">{{ project.data.description }}</p>
      </article>
    </a>
    {% endfor %}
</div>
{% if pagination.pages.length > 1 %}
<nav class="mt-12 text-lg text-center">
{% if pagination.previousPageHref %}
  <a class="mr-4 hover:underline focus:underline" rel="prev" href="{{ pagination.previousPageHref }}">â† Newer</a>
{% endif %}
  <span class="font">Page {{ pagination.pageNumber + 1 }}</span>
{% if pagination.nextPageHref %}
  <a class="ml-4 hover:underline focus:underline" rel="next" href="{{ pagination.nextPageHref }}">Older â†’</a>
{% endif %}
{% endif %}
</nav>
